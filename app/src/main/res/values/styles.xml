<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/rojo</item>
        <item name="colorPrimaryDark">@color/amarillo</item>
        <item name="colorAccent">@color/azul_logo</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="action_bar_styles" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColorPrimary">@color/blanco</item>
        <item name="android:textColorSecondary">@color/blanco</item>
        <item name="actionMenuTextColor">@color/verde</item>
    </style>

    <!-- ESTILOS ELEMENTOS COMUNES -->
    <style name="editTextPersonalizado">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/margin_bottom_login_campos_texto</item>
        <item name="android:layout_marginLeft">@dimen/margin_lateral_login</item>
        <item name="android:layout_marginRight">@dimen/margin_lateral_login</item>
        <item name="android:background">@drawable/estilos_edittext_personalizado</item>
        <item name="android:padding">@dimen/campos_texto</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="botonPersonalizado">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/margin_bottom_login</item>
        <item name="android:layout_marginLeft">@dimen/margin_lateral_login</item>
        <item name="android:layout_marginRight">@dimen/margin_lateral_login</item>
        <item name="android:background">@drawable/boton_login</item>
        <item name="android:textColor">@color/blanco</item>
    </style>

    <!-- ACTIVIDAD MOSTRAR CLIENTE -->
    <style name="fila_normal">
        <item name="android:layout_marginTop">@dimen/margen_entre_filas</item>
        <item name="android:layout_marginBottom">@dimen/margen_entre_filas</item>
    </style>

    <style name="texto_columna_valores">
        <item name="android:textSize">@dimen/standard_size</item>
        <item name="android:layout_centerVertical">true</item>

    </style>

    <style name="texto_columna_propiedades" parent="texto_columna_valores">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginRight">@dimen/margen_entre_filas</item>
    </style>
</resources>
