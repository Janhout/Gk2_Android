<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/padding_lista"
    android:id="@+id/filaFactura">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/detalle_factura_nombreCliente"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="70"/>
        <TextView
            android:id="@+id/detalle_factura_iconoImpreso"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_weight="5"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/importe"
                android:text="@string/s_facturas_importe"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/importeFactura"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/numeroFactura"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="20" />
        <TextView
            android:id="@+id/fechaFactura"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:gravity="center_horizontal"/>
        <TextView
            android:id="@+id/detalle_factura_iconoEnviado"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_weight="5"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/pendiente"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/importePendiente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>