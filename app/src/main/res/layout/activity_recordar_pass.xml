<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="es.aplicacion.janhout.login.RecordarPass">

    <include
        android:id="@+id/dialogo_progreso"
        layout="@layout/progreso"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo"
            android:layout_marginBottom="@dimen/margin_bottom_login"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvSubtitulo"
            android:text="@string/recuperar_pass"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:textSize="16sp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etUsuario"
            android:background="@drawable/estilos_edittext_personalizado"
            android:hint="@string/email"
            android:layout_marginBottom="@dimen/margin_bottom_login"
            android:layout_marginRight="@dimen/margin_lateral_login"
            android:layout_marginLeft="@dimen/margin_lateral_login"
            android:padding="@dimen/campos_texto"
            android:singleLine="true"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btRecuperar"
            android:text="@string/recuperar"
            android:textColor="@color/blanco"
            android:background="@drawable/boton_login"
            android:layout_gravity="center_horizontal"
            android:onClick="recuperar"
            android:layout_marginBottom="@dimen/margin_bottom_login"
            android:layout_marginRight="@dimen/margin_lateral_login"
            android:layout_marginLeft="@dimen/margin_lateral_login"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btVolverLogin"
            android:text="@string/volver_login"
            android:onClick="volverLogin"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bt_recordar"
            android:textColor="@color/azul_logo"
            android:textSize="16sp"
            />

    </LinearLayout>

</RelativeLayout>